<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Cont√°ctanos</h2>
        <hr class="primary">
        <div class="col-lg-4 col-lg-offset-2 text-center">
          <i class="fa fa-phone fa-3x sr-contact text-primary"></i>
          <p class="white">(+51) (1) 243 9090</p>
        </div>
        <div class="col-lg-4 text-center">
          <i class="fa fa-envelope-o fa-3x sr-contact text-primary"></i>
          <p class="white">consulting@angkorperu.com</p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= form_for @contact, url: contacts_path, html: {id: "contactForm"} do |f| %>
          <div class="row">
            <div class="col-md-6">
              <div id="contact_map" class="contact-map"></div>
            </div>
            <div class="col-md-6 form-contact">
              <div class="form-group no-margin-bottom">
                <div class ="col-lg-12">
                  <input type="text" class="form-control" placeholder="Nombre *" id="name" name="name" required data-validation-required-message="Por favor ingresa tu nombre.">
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="form-group no-margin-bottom">
                	<div class ="col-lg-6 form-input-left">
	                	<input type="email" class="form-control" name ="email" placeholder="Correo *" id="email" required data-validation-required-message="Por favor ingresa tu correo.">
	                 	<p class="help-block text-danger"></p>
	                </div>
	                <div class = "col-lg-6 form-input-right">
	                	<input type="phone" class="form-control" placeholder="Telefono *" id="phone" name="phone" required data-validation-required-message="Por favor ingresa tu telefono.">
	                	<p class="help-block text-danger"></p>
	                </div>
              </div>
              <div class="form-group no-margin-bottom">
                	<div class ="col-lg-6 form-input-left">
	                	<input type="empresa" class="form-control" placeholder="Empresa de contacto " id="business" name="business">
                    <p class="help-block text-danger"></p>
	                </div>
	                <div class = "col-lg-6 form-input-right">
	                	<input type="phone" class="form-control" placeholder="Cargo " id="position" name ="position">
                    <p class="help-block text-danger"></p>
	                </div>
              </div>
              <div class="form-group no-margin-bottom">
                <div class ="col-lg-12">
                  <textarea class="form-control" placeholder="Mensaje *" id="message" name="message" required data-validation-required-message="Por favor ingresa un mensaje."></textarea>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <button type="submit" class="btn btn-xl btn-primary">Enviar mensaje</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
